<script>
    $(function () {
        $('.color-picker > .input-group').colorpicker({
            autoInputFallback: true,
            sliders: {
                saturation: {
                    maxLeft: 135,
                    maxTop: 135
                },

                hue: {
                    maxTop: 135
                },

                alpha: {
                    maxTop: 135
                }
            },
            extensions: [
                {
                    // extension name to load
                    name: 'swatches',

                    // extension options
                    options: {
                        colors: {
                        'Hudson River Blue': '#0000b5',
                        'Central Park Green': '#008040',
                        'Lady Liberty Teal': '#008080'
                        },
                        namesAsValues: true
                    }
                }
            ]
        });
    });
</script>
